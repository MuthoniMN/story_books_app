<h6>Dashboard</h6>
<h3>Hey, {{name}}</h3>

{{#if stories}}
<div class="row">
    {{#each stories}}
    <div class="col s6">
        <div class="card">
            <div class="card-image">
                <img src="{{featuredImage}}" height="300" width="200" alt="{{summary}}">
                <span class="card-title">{{storyTitle}}</span>
            </div>
            <div class="card-content">
                <p>{{summary}}</p>
                <p>{{createdAt}}</p>
            </div>
            <div class="card-action">
                <a href="/stories/{{_id}}" style="color: #e53935;">Read Story</a>
            </div>
        </div>
    </div>

    {{/each}}
</div>

{{else}}
<section class="centered">
    <p class="center-align heading">You have not created any stories yet.</p>
    <a href="/stories/add" class="btn centered-btn red darken-1">Write your first story</a>
</section>
{{/if}}